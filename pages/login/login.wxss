.login {
  padding: 275.93rpx 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* 自定义 radio 样式 */
}
.login .logo {
  display: block;
  width: 259.499rpx;
  height: 178.1rpx;
}
.login .loginBtn {
  margin-top: 208.97rpx;
  width: 100%;
  height: 105rpx;
  display: flex;
  align-items: center;
}
.login .loginBtn .van-button {
  border-radius: 12rpx;
  height: 100%;
  width: 100%;
}
.login .loginBtn .van-button .van-button__text {
  display: flex;
  align-items: center;
}
.login .loginBtn .wechat {
  width: 49rpx;
  height: 49rpx;
  margin-right: 20rpx;
}
.login .loginBtn .text {
  color: #FFF;
  font-family: "Alibaba PuHuiTi 2.0";
  font-size: 32rpx;
  font-weight: 500;
}
.login radio {
  margin-top: 40rpx;
  color: #AAA;
  font-family: "Alibaba PuHuiTi 2.0";
  font-size: 25rpx;
  /* 选中后的样式 （可根据需求自己修改） */
}
.login radio .wx-radio-input {
  border-radius: 50%;
  width: 28rpx;
  height: 28rpx;
}
.login radio .wx-radio-input-checked::before {
  border-radius: 50%;
  width: 44rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  font-size: 28rpx;
  /* 对勾大小 */
  color: #fff;
  /* 对勾颜色 */
  background: #FFD430;
  border-color: #FFD430;
}
.login radio text {
  color: #FFD430;
  font-family: "Alibaba PuHuiTi 2.0";
  font-size: 25rpx;
  font-weight: 500;
}
